<Window x:Class="SimpleRenamer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="675" MinHeight="300" MinWidth="675" MaxHeight="300" MaxWidth="675" Icon="tv.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="325" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" >
            <StackPanel Orientation="Horizontal">
                <Label>Watch Folder</Label>
                <Button Name="AddFolderButton" Content="Add" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="AddFolderButton_Click"/>
                <Button Name="DeleteFolderButton" Content="Del" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="DeleteFolderButton_Click"/>
            </StackPanel>
            <ListBox Height="80" Name="WatchListBox" Margin="5" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal">
                <Label>File Extension</Label>
                <Button Name="AddExtensionButton" Content="Add" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="AddExtensionButton_Click"/>
                <Button Name="DeleteExtensionButton" Content="Del" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="DeleteExtensionButton_Click"/>
            </StackPanel>
            <ListBox Height="80" Name="ExtensionsListBox" Margin="5" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" >
            <CheckBox Name="SubdirCheckBox" Margin="5" Content="Scan Subdirectories" IsChecked="{Binding Path=SubDirectories}"/>
            <CheckBox Name="RenameCheckBox" Margin="5" Content="Rename Files" IsChecked="{Binding Path=RenameFiles}"/>
            <CheckBox Name="CopyCheckBox" Margin="5" Content="Copy Files" IsChecked="{Binding Path=CopyFiles}"/>
            <Label>File Name Format</Label>
            <TextBox Name="FileFormatTextBox" Margin="5" Text="{Binding Path=NewFileNameFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label>Destination Root Folder</Label>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="DestinationTextBox" Margin="5" Text="{Binding Path=DestinationFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="295"/>
                <Button Name="BrowseDestinationButton" Content="..." HorizontalAlignment="Right" Margin="0,5,0,5" VerticalAlignment="Top" Width="15" Click="BrowseDestinationButton_Click"/>
            </StackPanel>
            <Button Name="RegexExpressionButton" Content="Regex Expressions" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Top" Width="150" Click="RegexExpressionButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
