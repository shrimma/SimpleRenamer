<Window x:Class="SimpleRenamer.Views.EditShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Show" Height="200" Width="325" MinHeight="200" MinWidth="325" MaxHeight="200" MaxWidth="325" Icon="tv.ico">
    <Grid>        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" >
            <TextBlock Name="ShowNameTextBlock" Margin="5" TextWrapping="Wrap" Text="Custom Directory Name"/>
            <TextBox Name="ShowFolderTextBox" Margin="5" Height="23" TextWrapping="Wrap" Text="TextBox" GotFocus="ShowFolderTextBox_GotFocus" LostFocus="ShowFolderTextBox_LostFocus" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
