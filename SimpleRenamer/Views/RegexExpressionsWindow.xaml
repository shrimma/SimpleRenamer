<Window x:Class="SimpleRenamer.RegexExpressionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regex Expressions" Height="300" Width="675" MinHeight="300" MinWidth="675" MaxHeight="300" MaxWidth="675" Icon="tv.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="AddExpressionButton" Content="Add" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="AddExpressionButton_Click"/>
            <Button Name="DeleteExpressionButton" Content="Del" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="50" Click="DeleteExpressionButton_Click"/>
        </StackPanel>
        <ListBox Grid.Row="1" Name="ExpressionsListBox" Margin="5,0" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" Width="20" IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                        <TextBox Grid.Column="1" Text="{Binding Expression, Mode=TwoWay}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
