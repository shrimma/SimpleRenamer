<Window x:Class="SimpleRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:SimpleRenamer"
        Title="Simple Renamer" Height="400" Width="525" MinHeight="400" MinWidth="525" MaxHeight="400" MaxWidth="525" Icon="tv.ico">
    <Window.Resources>
        <l:InverseBooleanConverter x:Key="converter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="15" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Name="ScanButton" Content="Scan" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="ScanButton_Click"/>
            <Button Name="ActionButton" Content="Action" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="ActionButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="1" Name="SettingsButton" Content="Settings" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top" Width="75" Click="SettingsButton_Click" />
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Name="ProgressTextStackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Visibility="Collapsed">
            <TextBlock Name="ProgressTextBlock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </StackPanel>
        <ListBox Grid.Row="2" Grid.ColumnSpan="2" Name="ShowsListBox" HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="ShowsListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding IsTVShow}" />
                        <CheckBox Grid.Column="1" IsEnabled="{Binding SkippedExactSelection, Converter={StaticResource converter}}" IsChecked="{Binding ActionThis}" />
                        <TextBlock Grid.Column="2" Text="{Binding ShowName}" />
                        <TextBlock Grid.Column="3" Text="{Binding Season}" />
                        <TextBlock Grid.Column="4" Text="{Binding Episode}" />
                        <TextBlock Grid.Column="5" Text="{Binding EpisodeName}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Name="ButtonsStackPanel" Orientation="Horizontal" Visibility="Visible">
            <Button Name="MatchShowButton" IsEnabled="False" Content="Match" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="MatchShowButton_Click"/>
            <Button Name="IgnoreShowButton" IsEnabled="False" Content="Ignore" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="IgnoreShowButton_Click"/>
            <Button Name="DetailButton" IsEnabled="False" Content="Detail" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="DetailButton_Click"/>
            <Button Name="EditButton" IsEnabled="False" Content="Edit" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="EditButton_Click"/>
            <TextBox Name="ShowNameTextBox" Visibility="Hidden" Margin="5" Width="125"/>
            <Button Name="EditOkButton" Visibility="Hidden" Content="OK" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="35" Click="EditOkButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Name="ProgressBarStackPanel" Visibility="Collapsed">
            <ProgressBar Name="FileMoveProgressBar" Margin="5" Height="20" Width="515" Minimum="0"  Maximum="100" />
        </StackPanel>
    </Grid>
</Window>
