<Window x:Class="SimpleRenamer.MainWindow"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:l="clr-namespace:SimpleRenamer"
        Title="Simple TV Renamer" Height="400" Width="525" MinHeight="400" MinWidth="525" MaxHeight="400" MaxWidth="525" Icon="tv.ico">
    <Window.Resources>
        <l:InverseBooleanConverter x:Key="converter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Name="RunButton" Content="Scan" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="RunButton_Click"/>
            <Button Name="ActionButton" Content="Action" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="ActionButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="1" Name="SettingsButton" Content="Settings" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top" Width="75" Click="SettingsButton_Click" />
        <TabControl Grid.ColumnSpan="2" Grid.Row="1" Height="300">
            <TabItem Header="Shows">
                <ListBox Name="ShowsListBox" HorizontalAlignment="Left" Height="260" Margin="5" VerticalAlignment="Top" Width="508" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="ShowsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsEnabled="{Binding SkippedExactSelection, Converter={StaticResource converter}}" IsChecked="{Binding ActionThis}" />
                                <TextBlock Grid.Column="1" Text="{Binding ShowName}" />
                                <TextBlock Grid.Column="2" Text="{Binding Season}" />
                                <TextBlock Grid.Column="3" Text="{Binding Episode}" />
                                <TextBlock Grid.Column="4" Text="{Binding EpisodeName}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Log">
                <TextBox Name="LogTextBox" HorizontalAlignment="Left" Height="260" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" AcceptsReturn="True" IsReadOnly="True" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>  
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Name="ButtonsStackPanel" Orientation="Horizontal" Visibility="Visible">
            <Button Name="MatchShowButton" IsEnabled="False" Content="Match" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="MatchShowButton_Click"/>
            <Button Name="IgnoreShowButton" IsEnabled="False" Content="Ignore" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="IgnoreShowButton_Click"/>            
            <Button Name="ShowDetailButton" IsEnabled="False" Content="Show Detail" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="ShowDetailButton_Click"/>
            <Button Name="EditButton" IsEnabled="False" Content="Edit" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="EditButton_Click"/>
            <TextBox Name="ShowNameTextBox" Visibility="Hidden" Margin="5" Width="125"/>
            <Button Name="EditOkButton" Visibility="Hidden" Content="OK" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="35" Click="EditOkButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Name="ProgressStackPanel" Visibility="Collapsed">
            <ProgressBar Name="FileMoveProgressBar" Margin="5" Height="20" Width="515" Minimum="0"  Maximum="100" />
        </StackPanel>
    </Grid>
</Window>
