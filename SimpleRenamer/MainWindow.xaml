<Window x:Class="SimpleRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple TV Renamer" Height="350" Width="525" MinHeight="350" MinWidth="525" MaxHeight="350" MaxWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Name="RunButton" Grid.Row="0" Content="Run" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="RunButton_Click"/>
        <TextBox Grid.Row="1" Name="LogTextBox" HorizontalAlignment="Left" Height="277" Margin="10" TextWrapping="Wrap" VerticalAlignment="Top" Width="498" AcceptsReturn="True" IsReadOnly="True" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
    </Grid>
</Window>
