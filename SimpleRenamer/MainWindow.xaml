<Window x:Class="SimpleRenamer.MainWindow"        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:l="clr-namespace:SimpleRenamer"
        Title="Simple TV Renamer" Height="350" Width="525" MinHeight="350" MinWidth="525" MaxHeight="350" MaxWidth="525">
    <Window.Resources>
        <l:InverseBooleanConverter x:Key="converter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Button Name="RunButton" Content="Scan" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="RunButton_Click"/>
            <Button Name="ActionButton" Content="Action" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="ActionButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" IsEnabled="False" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="1" Name="SettingsButton" Content="Settings" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top" Width="75" Click="SettingsButton_Click" />
        <TabControl Grid.ColumnSpan="2" Grid.Row="1" Height="277">
            <TabItem Header="Shows">
                <ListBox Name="ShowsListBox" HorizontalAlignment="Left" Height="250" Margin="5" VerticalAlignment="Top" Width="508" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0" IsEnabled="{Binding SkippedExactSelection, Converter={StaticResource converter}}" IsChecked="{Binding ActionThis}" />
                                <TextBlock Grid.Column="1" Text="{Binding ShowName}" />
                                <TextBlock Grid.Column="2" Text="{Binding Season}" />
                                <TextBlock Grid.Column="3" Text="{Binding Episode}" />
                                <TextBlock Grid.Column="4" Text="{Binding EpisodeName}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Log">
                <TextBox Name="LogTextBox" HorizontalAlignment="Left" Height="250" Margin="5" TextWrapping="Wrap" VerticalAlignment="Top" Width="508" AcceptsReturn="True" IsReadOnly="True" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </TabItem>
        </TabControl>        
    </Grid>
</Window>
